# Stores the local installation and execution environment
# Supports the following replaceable values:
#  @GIT_ROOT@ - The top-level of the parent git repository where this file is located

BIN_DIR=@GIT_ROOT@/bin
HOME_BIN=/root/bin
CONFIG_DIR=${BIN_DIR}/.config
DOWNLOAD_DIR=${BIN_DIR}/.download
PLUGIN_DIR=${BIN_DIR}/plugin
SETUP_DIR=@GIT_ROOT@/external/setup
XAPI_DIR=@GIT_ROOT@/external/xapi.sh

# Resources provided by XCP-ng
XCP_CRITICAL_TAG=no_candid_shutdown
XCP_DRIVE_SR_NAME=qnap_nas
XCP_ISO_SR_NAME=qnap_iso
XCP_VM_SR_NAME=qnap_vm
